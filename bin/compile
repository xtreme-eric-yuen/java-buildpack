$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'java_buildpack/buildpack'
require 'open-uri'
require 'rubygems/package'
require 'zlib'

build_dir = ARGV[0]
cache_path = ARGV[1]

# Download cmake
open('cmake-3.2.2.tar.gz', 'wb') do |file| 
	file << open('http://www.cmake.org/files/v3.2/cmake-3.2.2.tar.gz').read
end

# # Extract cmake
system('tar -xf cmake-3.2.2.tar.gz')

# # Install cmake
system('cd cmake-3.2.2 ; ./bootstrap ; make')

# # Download OpenCV
open('2.4.11.tar.gz', 'wb') do |file|
  file << open('https://github.com/Itseez/opencv/archive/2.4.11.tar.gz').read
end

# # Extract OpenCV
system('tar -xf 2.4.11.tar.gz')

# Install OpenCV
system("cd opencv-2.4.11 ; ../cmake-3.2.2/bin/cmake -D CMAKE_BUILD_TYPE=RELEASE .; make")

# Set environment variable for OpenCV library file
ENV['OPENCV_LIB'] = "#{build.dir}/opencv-2.4.11/lib"

JavaBuildpack::Buildpack.with_buildpack(build_dir, 'Compile failed with exception %s') do |buildpack|
  buildpack.compile
end
